# Production Environment Variables for Render Backend
# Copy these to your Render dashboard Environment Variables section

# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
DJANGO_SETTINGS_MODULE=backend.settings
ALLOWED_HOSTS=.onrender.com,localhost,127.0.0.1

# Supabase Database Configuration
# Get these from your Supabase project: Settings -> Database -> Connection pooling
DB_NAME=postgres
DB_USER=postgres.your-project-ref
DB_PASSWORD=your_supabase_password
DB_HOST=aws-0-us-east-1.pooler.supabase.com
DB_PORT=6543

# Alternative: Use DATABASE_URL (Render will use this if provided)
# DATABASE_URL=postgresql://postgres.user:password@host:port/postgres

# CORS Settings
CORS_ALLOWED_ORIGINS=https://edupro-frontend.onrender.com,http://localhost:5173

# JWT Settings (optional - adjust as needed)
ACCESS_TOKEN_LIFETIME_MINUTES=300
REFRESH_TOKEN_LIFETIME_DAYS=1

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Media Files
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Python Version
PYTHON_VERSION=3.11.0
